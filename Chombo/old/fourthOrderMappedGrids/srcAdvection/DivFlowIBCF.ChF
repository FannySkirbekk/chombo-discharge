#include "REAL.H"
#include "CONSTANTS.H"

      subroutine veclatlondivflow(
!
!     => inputs,  <= outputs
!     vecRLL <= vector field in longitude-latitude basis
!     ptRLL  => longitude-latitude points
!     k      => factor
!     time   => time
!     period => period
     &     CHF_FRA[vecRLL],
     &     CHF_CONST_FRA[ptRLL],
     &     CHF_CONST_REAL[k],
     &     CHF_CONST_REAL[time],
     &     CHF_CONST_REAL[period])

      integer CHF_AUTODECL[i]
      real_t lon, lat

      CHF_AUTOMULTIDO[vecRLL; i]
      lon = ptRLL(CHF_AUTOIX[i], 0) - two*Pi*time/period
      lat = ptRLL(CHF_AUTOIX[i], 1)
      vecRLL(CHF_AUTOIX[i], 0) =
     &     - k * sin(lon/two)*sin(lon/two)*sin(two*lat)*cos(lat)*cos(lat)
     &         * cos(Pi*time/period)
     &     + two*Pi*cos(lat) / period
      vecRLL(CHF_AUTOIX[i], 1) =
     &     k / two * sin(lon)*cos(lat)*cos(lat)*cos(lat)*cos(Pi*time/period)
      CHF_ENDDO

      return
      end
